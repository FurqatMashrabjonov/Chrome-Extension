{
    "name": "ChatGPT Tarjimon",
    "description": "ChatGPT Tarjimon",
    "version": "1.0.0",
    "manifest_version": 3,
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon64.png"
    },
    "permissions": [
        "webRequest",
        "scripting",
        "activeTab",
        "clipboardRead",
        "clipboardWrite",
        "tabs"
    ],
    "host_permissions": [
        "https://chat.openai.com/*"
    ],
    "action":{
        "default_title": "ChatGPT Tarjimon",
        "default_popup": "popup.html"
    }
}